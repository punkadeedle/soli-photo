    <div class="row">
        <h1 style="text-align: center">New Album</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/users/<%= currentUser_id %>/albums" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="album[name]" placeholder="name">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/users/<%= currentUser_id %>/albums">Go Back</a>
        </div>
    </div>

