<%- include ("../partials/header.ejs") %>
    <div class="container">
               <div style="width: 30%; margin: 25px auto;">
                        <h1>Edit Profile</h1>
            <form action="/users/<%= currentUser._id %>?_method=PATCH" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="currentUser[firstName]" placeholder="First Name" value="<%= currentUser.firstName %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="currentUser[lastName]" placeholder="Last Name" value="<%= currentUser.lastName %>">
                </div>
                <div class="form-group">
                   <input class="form-control" type="text" name="currentUser[email]" placeholder="Email" value="<%= currentUser.email %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Update</button>
                </div>
            </form>
            <a href="/users/<%= currentUser._id %>">Cancel</a>
        </div>
    </div>
<%- include ("../partials/footer.ejs") %>